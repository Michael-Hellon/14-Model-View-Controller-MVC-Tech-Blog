<div class="row">
  <div class="col-md-6">

    <h2class="card-header">Login</h2>

<!-- login-form for Event Listener -->
<!--  // ('#name-login') for username login -->
<!--  // ('.login-form') for event listener -->

    <form class="form login-form"> 
      <div class="form-group">
        <label for="form-label">Username:</label>
        <input class="form-input" type="text" id="name-login" />
      </div>
      <div class="form-group">
        <label for="form-label">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

<!-- login-form for Event Listener -->
<!--  // ('#name-signup') for username sign up -->
<!--  // ('.signup-form') for event listener -->
    <form class="form signup-form">
      <div class="form-group">
        <label for="form-label">User Name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="form-label">Email:</label>
        <input class="form-input" type="email" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="form-label">password:</label>
        <input class="form-input" type="password" id="password-signup" />
        <h5><em>Password must be at least 10 characters long</em></h5>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
