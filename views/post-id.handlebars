<article class="post">
    <div class="dashboard-post">
        <div class="card-header ">
            <h4 class="card-title post-title">{{title}}</h4>
            <div class="card-body post-body">
                <p class="card-body post-content">{{content}}</p>
                <p class="card-text post-author">Posted by <span class="post-username">{{user.name}}</span> on
                    {{format_date date_created}}</p>
            </div>
        </div>
    </div>
</article>
{{#if logged_in}}
<div class="comment-post">
    <div class="comments">
        <h4 class="comment-list">Comments</h4>
        {{#each comments}}
        <div class="comment-post card post comment-box">
            <div class="card-body post-body">
                <div class="card-text comment-text">
                    {{comment}}
                </div>
                <div class="comment-author">
                    -{{user.name}}, {{format_date date_created}}
                </div>
            </div>
        </div>
    </div>    
    {{/each}}
</div>

<div class="new-comment-id-post card-body">
    <form class="comment-new-form" id="comment-form">
        <div class="form-row">
            <label class="form-label">Comment</label>
              <textarea id="comment-new" class="form-input form-control"></textarea> 
        </div>
        <button id="submit" type="submit" class="btn btn-primary">SUBMIT</button>
    </form>

{{/if}}
</div> 