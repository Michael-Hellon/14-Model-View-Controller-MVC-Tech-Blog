<article class="post">
    <div class="container">
        <div class="card-header dashboard-post">
            <h4 class="card-title post-title">{{title}}</h4>
            <div class="card-body post-body">
                <p class="card-body post-content">{{content}}</p>
                <p class="card-text post-author">Posted by <span class="post-username">{{user.name}}</span> on
                    {{format_date date_created}}</p>
            </div>
        </div>
    </div>
</article>
{{#if logged_in}}
<div class="container">
    <div class="comments">
        <h4 class="comment-list">Comments</h4>
        {{#each comments}}
        <div class="card post comment-box">
            <div class="card-body post-body">
                <div class="card-text comment-text">
                    {{comment}}
                </div>
                <div class="comment-author">
                    -{{user.name}}, {{format_date date_created}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


<div class="comment-container">
    <form class="card-body comment-form" id="comment-form">
        <div class="form-row">
            <label class="form-label">Comment</label>
       
            <input id="comment" name="comment-body" class="form-input  form-control" />
        </div>
        <button type="submit" class="btn btn-primary">SUBMIT</button>
    </form>
</div>
{{/if}}
<script src="/js/comment.js"></script>